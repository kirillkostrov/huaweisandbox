<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huawei.kkstudy">
    <!-- required by location kit -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" /> <!-- Required by scan kit -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Required by map kit -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".Utils.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <meta-data
            android:name="push_kit_auto_init_enabled"
            android:value="true" />

        <activity
            android:name=".LabActivities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LabActivities.IdentityKitActivity"
            android:label="@string/identity_kit_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".LabActivities.MapActivity"
            android:label="@string/map_kit_header">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".LabActivities.SiteKitActivity"
            android:label="@string/site_kit_header">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".LabActivities.DisplayResultActivity" />
        <activity
            android:name=".LabActivities.SafetyKitActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".LabActivities.ScanActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".LabActivities.LocationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".RootActivity"></activity>
        <activity
            android:name=".LabActivities.AuthKitActivity"
            android:label="@string/auth_kit_codelab_title"
            android:parentActivityName=".RootActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity
            android:name=".LabActivities.PushKitActivity"
            android:label="Push Kit Lab"
            android:parentActivityName=".RootActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".LabActivities.Analytics.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>
        <activity android:name=".LabActivities.Analytics.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LabActivities.Analytics.MainActivity" />
        </activity>
        <activity android:name=".LabActivities.IAPActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootActivity" />
        </activity>

        <service
            android:name=".Utils.MyPushService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.huawei.push.action.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>