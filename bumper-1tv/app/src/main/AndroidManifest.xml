<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tv1.android.tv">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />
    <permission android:name="systemOrSignature"
        android:protectionLevel="signature|privileged"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/app_icon_banner"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name="com.tv1.bumper.MainActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:banner="@drawable/app_icon_banner"
            android:exported="true"
            android:screenOrientation="landscape"
            android:permission="systemOrSignature">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>